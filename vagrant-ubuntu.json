{
  "variables": {
    "docker_email": "",
    "docker_user": "",
    "docker_password": ""
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "vagrant-ubuntu-14.04",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{.Name}} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "headless": false,
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http/ubuntu",
      "iso_url": "http://releases.ubuntu.com/14.04.1/ubuntu-14.04.1-server-amd64.iso",
      "iso_checksum": "ca2531b8cd79ea5b778ede3a524779b9",
      "iso_checksum_type": "md5",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "boot_wait": "4s",
      "disk_size": 10140,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--natdnshostresolver1",
          "on"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "vm_name": "vagrant-ubuntu-14.04",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{.Name}} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "guest_os_type": "ubuntu-64",
      "http_directory": "http/ubuntu",
      "iso_url": "http://releases.ubuntu.com/14.04.1/ubuntu-14.04.1-server-amd64.iso",
      "iso_checksum": "ca2531b8cd79ea5b778ede3a524779b9",
      "iso_checksum_type": "md5",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "disk_size": 10140,
      "boot_wait": "4s",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "512",
        "numvcpus": "1"
      }
    },
    {
      "type": "docker",
      "image": "phusion/baseimage",
      "login": true,
      "login_email": "{{user `docker_email`}}",
      "login_username": "{{user `docker_user`}}",
      "login_password": "{{user `docker_password`}}",
      "pull": true,
      "commit": true
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": [
        "virtualbox-iso",
        "vmware-iso"
      ],
      "output": "boxes/vagrant-ubuntu-{{.Provider}}.box"
    },
    [
      {
        "type": "docker-tag",
        "only": [
          "docker"
        ],
        "repository": "coralnexus/vagrant-ubuntu",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "only": [
          "docker"
        ],
        "login": true,
        "login_email": "{{user `docker_email`}}",
        "login_username": "{{user `docker_user`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ]
  ],
  "provisioners": [
    {
      "type": "shell",
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        }
      },
      "scripts": [
        "scripts/ubuntu/base.sh",
        "scripts/ubuntu/vagrant.sh"
      ]
    },
    {
      "type": "shell",
      "only": [
        "virtualbox-iso"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        }
      },
      "scripts": [
        "scripts/ubuntu/virtualbox.sh"
     ]
    },
    {
      "type": "shell",
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        }
      },
      "scripts": [
        "scripts/ubuntu/cleanup.sh"
      ]
    },
    {
      "type": "shell",
      "only": [
        "virtualbox-iso",
        "vmware-iso"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        }
      },
      "scripts": [
        "scripts/ubuntu/zerodisk.sh"
      ]
    }
  ]
}

